<h1>Lista de Lojas</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4">
  <% @stores.each do |store| %>
    <div class="<%= cycle('bg-gray-100', 'bg-gray-200') %> p-4 rounded-lg shadow-md">
      <div class="text-lg text-gray-900 dark:text-white">
        Nome: <%= store.name %><br>
        Descrição: <%= store.description %>
      </div>
      <div class="mt-2">
        <%= link_to "Show", store, class: "rounded-lg py-2 px-4 bg-blue-600 text-white font-medium hover:bg-blue-700" %>
        <%= link_to 'Edit', edit_store_path(store), class: "rounded-lg py-2 px-4 bg-gray-100 text-gray-800 font-medium hover:bg-gray-200" %>
      </div>
    </div>
  <% end %>
</div>

<div class="text-center mt-4">
  <%= paginate @stores %>
</div>
