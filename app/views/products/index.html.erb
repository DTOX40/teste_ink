<h1>Lista de Produtos</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-4">
  <% @products.each do |product| %>
    <div class="<%= cycle('bg-gray-100', 'bg-gray-200') %> p-4 rounded-lg shadow-md">
      <div class="text-lg text-gray-900 dark:text-white">
        Nome: <%= product.name %><br>
        Pre√ßo: <%= number_to_currency(product.price) %>
      </div>
      <div class="mt-2">
        <%= link_to "Show", product, class: "rounded-lg py-2 px-4 bg-blue-600 text-white font-medium hover:bg-blue-700" %>
        <%= link_to 'Edit', edit_product_path(product), class: "rounded-lg py-2 px-4 bg-gray-100 text-gray-800 font-medium hover:bg-gray-200" %>
      </div>
    </div>
  <% end %>
</div>

<div class="text-center mt-4">
  <%= paginate @products %>
</div>

