<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Lista de Pedidos</h1>

  <div class="bg-white shadow-md rounded-lg overflow-hidden mt-4">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Produto</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data do Pedido</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @orders.each_with_index do |order, index| %>
          <tr class="<%= index.even? ? 'bg-gray-50' : 'bg-white' %>">
            <td class="px-6 py-4 whitespace-nowrap"><%= order.client_name %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= order.product.name %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= order.created_at.strftime('%Y-%m-%d') %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to 'Show', order, class: "text-indigo-600 hover:text-indigo-900" %>
              <%= link_to 'Edit', edit_order_path(order), class: "text-blue-600 hover:text-blue-900 ml-2" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="text-center mt-4">
    <%= paginate @orders %>
  </div>

  <%= link_to 'Voltar para a lista de pedidos', orders_path, class: "mt-4 block text-blue-600 hover:text-blue-900" %>
</div>
